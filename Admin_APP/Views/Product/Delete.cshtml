@model ViewModels.Catalog.Products.ProductDeleteRequest

@{
    ViewData["Title"] = "Xóa sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">XÓA SẢN PHẨM</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/">Trang Chủ</a></li>
        <li class="breadcrumb-item active">XÓA SẢN PHẨM</li>
    </ol>
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table me-1"></i>
            <a class="btn btn-success" asp-action="Index" asp-controller="Product">Về Danh Sách</a>
        </div>
        <div class="card-body">
            <div class="col-md-10">
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.id)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.id)
                    </dd>
                </dl>

                <form asp-action="Delete">
                    <input asp-for="id" type="hidden" />
                    <input type="submit" value="Xóa" class="btn btn-danger" />
                </form>
            </div>
        </div>
    </div>
</div>